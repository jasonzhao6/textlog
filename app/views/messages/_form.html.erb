<%= form_for message do |f| %>
  <div class='row-fluid'>
    <%= f.text_area :message, class: 'span6', placeholder: 'Message' %>
  </div>

  <%= render 'shared/form_errors', model: message %>

  <div class='row-fluid'>
    <%= f.submit class: 'btn btn-primary span6' %>
  </div>

  <div class='row-fluid'>
    <%= link_to 'Cancel', :messages, class: 'cancel' %>
  </div>
<% end %>
