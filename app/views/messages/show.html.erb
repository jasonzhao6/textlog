<div class='message-container span6'>
  <div class='docs'>
    <div class='docs-header'><h4>Activity preview</h4></div>
    <p class='well well-small'><%= @message.message %></p>
    <%= render 'activities/preview' %>
  </div>

  <%= form_for @message do |f| %>
    <%= f.submit 'Parse Message', class: 'btn btn-primary btn-block' %>
    <%= link_to 'Cancel', :messages, class: 'cancel' %>
  <% end %>
</div>

<div class='rules-container span6'>
  <div class='docs'>
    <% @applicable_matchers.each do |matcher| %>
      <div class='docs-header'><h4>Applicable rules</h4></div>
      <%= render 'rules/preview', matcher: matcher %>
    <% end %>
    <%= link_to 'Add new', :new_message, class: 'btn btn-small' %>
  </div>
</div>
