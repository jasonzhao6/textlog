<div class='message-container span6'>
  <div class='docs'>
    <div class='docs-header'><h4><%= 'Message to parse' %></h4></div>
    
    <!-- TODO search rules -->
    <!-- <div class='navbar'>
      <div class='navbar-inner'>
        <form class='navbar-search pull-left'>
          <input type='text' class='search-query' placeholder='Search'>
        </form>
      </div>
    </div> -->
    
    <%= @message.message %>
  </div>

  <%= form_for @message do |f| %>
    <%= f.submit 'Parse Message', class: 'btn btn-primary btn-block' %>
    <%= link_to 'Cancel', :messages, class: 'cancel' %>
  <% end %>
</div>

<div class='rules-container span6'>
  <div class='docs'>
    <% 2.times do %>
      <div class='docs-header'><h4><%= 'Rules' %></h4></div>
      <dl class='rule'>
        <dt>
          <span class='label label-info'><%= 'match' %></span>
          <code><%= 'biked (?<objective>[\w\s]+?)(with|in|\.)' %></code> 
        </dt>
        <dd>
          <span class='label label-success'><%= 'set_name' %></span>
          <code><%= 'Biking' %></code> 
        </dd>
        <dd>
          <span class='label label-success'><%= 'set_objective '%></span>
          <code><%= '<objective>' %></code> 
        </dd>
      </dl>
    <% end %>
    <%= link_to 'Add new', :new_message, class: 'btn btn-small' %>
  </div>
</div>
