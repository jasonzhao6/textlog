<dl class='dl-horizontal activity'>
  <% if @we_are_parsing || activity.primary_type.present? %>
    <dt>Primary Type:</dt>
      <dd><%= activity_attr(activity.primary_type) %></dd>
  <% end %>
  
  <% if @we_are_parsing || activity.secondary_type.present? %>
    <dt>Secondary Type:</dt>
      <dd><%= activity_attr(activity.secondary_type) %></dd>
  <% end %>
  
  <% if @we_are_parsing || activity.friends.present? %>
    <dt>Friends:</dt>
    <dd><%= activity_attr(activity.friends.map(&:name).join(', ')) %></dd>
  <% end %>
  
  <% if @we_are_parsing || activity.duration.present? %>
    <dt>Duration:</dt>
    <dd><%= activity_attr(activity.duration) %></dd>
  <% end %>
  
  <% if @we_are_parsing || activity.distance.present? %>
    <dt>Distance:</dt>
    <dd><%= activity_attr(activity.distance) %></dd>
  <% end %>
  
  <% if @we_are_parsing || activity.reps.present? %>
    <dd><%= activity_attr(activity.reps) %></dd>
  <% end %>
  
  <% if @we_are_parsing || activity.note.present? %>
    <dt>Note:</dt>
    <dd><%= activity_attr(activity.note) %></dd>
  <% end %>
</dl>
