<dl class='dl-horizontal activity'>
  <dt>Primary Type:</dt>
    <dd><%= activity_attr(activity.primary_type) %></dd>
  <dt>Secondary Type:</dt>
    <dd><%= activity_attr(activity.secondary_type) %></dd>
  <dt>Friends:</dt>
    <dd><%= activity_attr(activity.friends.map(&:name).join(', ')) %></dd>
  <dt>Duration:</dt>
    <dd><%= activity_attr(activity.duration) %></dd>
  <dt>Distance:</dt>
    <dd><%= activity_attr(activity.distance) %></dd>
  <dt>Reps:</dt>
    <dd><%= activity_attr(activity.reps) %></dd>
  <dt>Note:</dt>
    <dd><%= activity_attr(activity.note) %></dd>
</dl>
