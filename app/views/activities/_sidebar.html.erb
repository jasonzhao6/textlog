<div class='well sidebar-nav'>
  <ul class='nav nav-list'>
    <% if @top_activities.present? %>
      <li class='nav-header'>Top activities</li>
      <% @top_activities.each do |activity| %>
        <li><%= link_to top_activity_text(*activity),
                        top_activity_href(*activity) %></li>
      <% end %>
    <% end %>

    <% if @top_friends.present? %>
      <li class='nav-header'>Top activity partners</li>
      <% @top_friends.each do |friend| %>
        <li>
          <a href='<%= top_friend_href(*friend) %>'>
            <%= image_tag profile_pic(*friend), alt: top_friend_name(*friend),
                                                class: 'profile-pic' %>
            <%= top_friend_text(*friend) %>
          </a>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
