<div class='docs'>
  <div class='docs-header'>
    <h4>
      <%= "Active #{time_ago_in_words(matcher.updated_at)} ago | #{matcher.cnt}x" %>
    </h4>
    <div class='actions'>
      <a class='edit' href='<%= edit_rule_path(matcher.id) %>'>
        <i class='icon-edit'></i>edit</a>
      <a class='delete' href='<%= rule_path(matcher.id) %>'
         data-method='delete' data-confirm='Are you sure?' rel='nofollow'>
         <i class='icon-trash'></i>delete</a>
    </div>
  </div>
  
  <%= render 'rules/rule', matcher: matcher %>
</div>
