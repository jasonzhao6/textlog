<fieldset>
  <div class='row-fluid select-row'>
    <%= select_tag 'commands[]',
                   options_for_select(Activity::COMMANDS),
                   prompt: 'set ...',
                   id: nil,
                   class: 'offset1 input-medium' %>
    <div class='actions'>
      <a class='delete' href='#'><i class='icon-trash'></i>delete</a>
    </div>
  </div>

  <div class='row-fluid'>
    <%= text_field_tag 'args[]',
                       '',
                       id: nil,
                       class: 'span5 offset1',
                       placeholder: 'Argument' %>
  </div>
</fieldset>
