<fieldset>
  <div class='row-fluid select-row'>
    <%= select_tag 'commands[]',
                   options_for_select(Activity::COMMANDS, setter.command),
                   prompt: 'set ...',
                   id: nil,
                   class: 'offset1 input-medium' %>
    <div class='actions'>
      <a class='delete' href='#' tabindex='99'>
        <i class='icon-trash'></i>delete
      </a>
    </div>
  </div>

  <div class='row-fluid'>
    <%= text_field_tag 'args[]',
                       '',
                       id: nil,
                       class: 'span11 offset1',
                       value: setter.arg,
                       placeholder: "{ field_name: 'value' }" %>
  </div>
</fieldset>
