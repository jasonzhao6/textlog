<% if @rules.present? %>
  <% content_for :sidebar do %>
    <%= render 'sidebar' %>
  <% end %>

  <% if params[:command].present? %>
    <ul class='breadcrumb'>
      <li><%= link_to 'All', :rules %> <span class='divider'>/</span></li>
      <li class='active'><%= params[:command] %></li>
    </ul>
  <% end %>

  <%= render partial: 'rule', collection: @rules, as: :matcher %>
<% else %>
  <h4>No rule yet.</h4>
<% end %>
