<% content_for :sidebar do %>
  <%= render 'sidebar' %>
<% end %>

<% Rule.get_matchers(@rules).each do |matcher| %>
  <div class='docs'>
    <div class='docs-header'>
      <h4>
        <%= "Active #{time_ago_in_words(matcher.updated_at)} ago | #{matcher.cnt}x" %>
      </h4>
      <div class='actions'>
        <a class='edit' href='<%= edit_rule_path(matcher.id) %>'>
          <i class='icon-edit'></i>edit</a>
        <a class='delete' href='<%= rule_path(matcher.id) %>'
           data-method='delete' data-confirm='Are you sure?' rel='nofollow'>
           <i class='icon-trash'></i>delete</a>
      </div>
    </div>
  
    <dl class='rule'>
      <dt>
        <span class='label label-info'><%= matcher.command %></span>
        <code><%= matcher.arg %></code> 
      </dt>
      <% Rule.get_setters(@rules, matcher).each do |setter| %>
        <dd>
          <span class='label label-success'><%= setter.command %></span>
          <code><%= setter.arg %></code> 
        </dd>
      <% end %>
    </dl>
  </div>
<% end %>

<%= link_to 'Add new', :new_rule, class: 'btn' %>
