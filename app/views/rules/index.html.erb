<% content_for :sidebar do %>
  <%= render 'sidebar' %>
<% end %>

<% if params[:command].present? %>
  <ul class='breadcrumb'>
    <li><%= link_to 'All', rules_path('sort-by' => params['sort-by']) %>
      <span class='divider'>/</span></li>
    <li class='active'><%= params[:command] %>
      <sup>(<%= @rules.count %>)</sup></li>
  </ul>
<% end %>

<% if @rules.present? %>
  <%= render partial: 'rule_docs', collection: @rules, as: :matcher %>
<% elsif params[:command].present? %>
  <h4>No match.</h4>
<% else %>
  <h4>No rule yet.</h4>
<% end %>
